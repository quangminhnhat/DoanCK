<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chá»§</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <!-- link swiper-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
</head>

<body>
<%- include('../shared/header') %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Exam Scores: <%= assignment.exam_title %></h2>
            <p class="text-muted">
                Class: <%= assignment.class_name %><br>
                Exam Code: <%= assignment.exam_code %>
            </p>
        </div>
        <div class="col-auto">
            <a href="/exams/<%= assignment.assignment_id %>/assign" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Assignment
            </a>
        </div>
    </div>

    <% if (flashMessage) { %>
        <div class="alert alert-<%= flashMessage.type %> alert-dismissible fade show" role="alert">
            <%= flashMessage.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Student Scores</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Latest Attempt</th>
                            <th>Score</th>
                            <th>Started</th>
                            <th>Submitted</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% scores.forEach(score => { %>
                            <tr>
                                <td><%= score.student_name %></td>
                                <td><%= score.attempt_no || 'Not attempted' %></td>
                                <td>
                                    <% if (score.score !== null) { %>
                                        <%= score.score %>
                                    <% } else if (score.submitted_at) { %>
                                        Pending grading
                                    <% } else if (score.started_at) { %>
                                        In progress
                                    <% } else { %>
                                        Not started
                                    <% } %>
                                </td>
                                <td>
                                    <%= score.started_at ? new Date(score.started_at).toLocaleString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) : 'N/A' %>
                                </td>
                                <td>
                                    <%= score.submitted_at ? new Date(score.submitted_at).toLocaleString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) : 'N/A' %>
                                </td>
                                <td>
                                    <% if (!score.started_at) { %>
                                        <span class="badge bg-secondary">Not Started</span>
                                    <% } else if (!score.submitted_at) { %>
                                        <span class="badge bg-warning text-dark">In Progress</span>
                                    <% } else if (score.status === 'in_progress') { %>
                                        <span class="badge bg-warning text-dark">In Progress</span>
                                    <% } else if (score.status === 'graded') { %>
                                        <span class="badge bg-success">Graded</span>
                                    <% } else { %>
                                        <!-- Awaiting grading -->
                                        <span class="badge bg-info">Awaiting Manual Grading</span>
                                        &nbsp;
                                        <a href="/exams/attempts/<%= score.attempt_id %>/grade" class="btn btn-sm btn-outline-primary">Grade</a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                        <% if (scores.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center">No students enrolled in this class</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../shared/footer') %>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>

</html>